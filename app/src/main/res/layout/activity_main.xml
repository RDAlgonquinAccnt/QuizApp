<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/AcceptTos"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Accept Terms and Services"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/TosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:text="Terms and Services"/>

    <TextView
        android:id="@+id/TosText"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@id/TosTitle"
        android:scrollbars="vertical"
        android:text="@string/ToS"
        android:background="@drawable/legal_border"/>

    <TextView
        android:id="@+id/PrivacyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TosText"
        android:text="Privacy Policy"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/PrivacyText"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:layout_below="@id/PrivacyTitle"
        android:background="@drawable/legal_border"
        android:scrollbars="vertical"
        android:text="@string/PrivacyPolicy" />

</RelativeLayout>